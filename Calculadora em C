#include <stdio.h>

int main()
{
    int a,b,c,x;
    char continuar;
    do{
    printf("\nInforme o valor A: ");
    scanf("%d",&a);
    printf("Informe o valor B: ");
    scanf("%d",&b);
    printf("\nSelecione uma operação:\n[1]Soma\n[2]Subtração\n[3]Multiplicação\n[4]Divisão\n\n");
    scanf("%d",&c);
    if(c==1){
        printf("\nA soma é: %d", x=a+b);
    }
    else{
        if(c==2){
            printf("\nA subtração é: %d", x=a-b);
        }
        else{
            if(c==3){
                printf("\nA multiplicação é: %d", x=a*b);
            }
            else{
                if(c==4){
               printf("\nA divisão é: %d", x=a/b);
                } else{
                    printf("\nOpção invalida");
                      }    
                }
            }
        }
        printf("\n\nDeseja continuar? (s/n): ");
        scanf(" %c",&continuar);
    }while (continuar == 's' || continuar == 'S');
    return 0;
}

